<div class="card">
  <div class="card-body">
    <h4>Editar Relato: </h4>
    <hr>
    <form action="/usuarios/relatos/edit" method="POST">
      <input type="hidden" value="{{relatos._id}}" name="id">
      <label for="titulo">Titulo: </label>
      <input type="text" name="titulo"class="form-control" value="{{relatos.titulo}}" required>
      <label for="setor">Setor: </label>
      <input type="text" name="setor" class="form-control" value="{{relatos.setor}}" required>
      <label for="descricao">Descrição:</label>
      <textarea name="descricao" class="form-control">{{relatos.descricao}}</textarea>
      <label for="categoria">Categoria do relato: </label>
      <select name="categoria" class="form-select" required>
        {{#each categorias}}
        <option value="{{_id}}">{{nome}}</option>
        {{else}}
        <option value="0" >Nenhuma categoria encontrada</option>
        {{/each}}
      </select>
      <label for="image">Upload Image: </label>
      <input type="file" name="image" class="form-control">
      <img src="/uploads/{{relatos.image}}" alt="..." class="my-3" height="150" width="150">
      <input type="hidden" name="old_image" value="{{relatos.image}}">
      <br>
      <button type="submit" class="btn btn-success mt-4">Editar relato</button>
    </form>
  </div>
</div>